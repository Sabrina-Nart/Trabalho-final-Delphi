{$R *.dfm}

uses uDadaModulo_Cidades;

procedure TfrmCidades.btnExcluirClick(Sender: TObject);

begin
    if (Application.MessageBox('Você confirma a exclução?' , 'AVISO' , MB_ICONQUESTION+MB_YESNO) = idNo) then
        EXIT;
    DataSource_Cidades.DataSet.Delete;
end;

end.
